{
	"name": "archunit",
	"version": "1.0.10",
	"description": "",
	"keywords": [],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"author": "Lukas Niessen <lks.niessen@gmail.com> (https://lukasniessen.com)",
	"repository": {
		"type": "git",
		"url": "https://github.com/LukasNiessen/ArchUnitTS.git"
	},
	"license": "MIT",
	"engines": {
		"node": ">=14.0.0"
	},
	"type": "module",
	"scripts": {
		"lint": "eslint src",
		"clean": "rimraf dist",
		"patch-pub": "npm version patch; npm publish",
		"minor-pub": "npm version minor; npm publish",
		"major-pub": "npm version major; npm publish",
		"build": "tsc && typedoc --out docs --target es6 --theme default --mode modules src",
		"format": "prettier --ignore-path .gitignore --write '**/*.ts*'",
		"format:check": "prettier --ignore-path .gitignore --check '**/*.ts*'",
		"test": "jest --no-cache",
		"test:watch": "jest --watch --no-cache",
		"test:clear": "jest --clearCache",
		"test:prod": "npm run lint && npm run test -- --coverage --no-cache"
	},
	"jest": {
		"testURL": "http://localhost/",
		"transform": {
			".(ts|tsx)": "ts-jest"
		},
		"testRegex": "(/(test|src)/.*\\.(test|spec))\\.(ts|tsx)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/test/"
		],
		"coverageThreshold": {
			"global": {
				"branches": 70,
				"functions": 70,
				"lines": 70,
				"statements": 70
			}
		},
		"collectCoverage": true
	},
	"devDependencies": {
		"@eslint/js": "^8.56.0",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.16",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"colors": "^1.4.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.0.0",
		"globals": "^13.24.0",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.5",
		"prompt": "^1.3.0",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typedoc": "^0.25.7"
	},
	"dependencies": {
		"@zerollup/ts-helpers": "^1.7.18",
		"plantuml-parser": "^0.4.0",
		"typescript": "^5.3.3"
	}
}
